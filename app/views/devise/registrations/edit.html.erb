<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h2>ユーザー編集ページ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_messages! %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <!-- 名前入力用のフィールドを追加 -->
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <% if @user.provider.blank? %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :パスワード %> <i>(パスワードをご変更希望の方は下記にご入力ください)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :確認用パスワード %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :現在のパスワード %> <i>(パスワード変更確認のため、現在のパスワードをご入力ください)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

    <% end %>

      <div class="field">
        <di class="profileimg">
        <%= profile_img(@user) if profile_img(@user) %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>



  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary btn-block" %>
  </div>
  <% end %>


<h4>退会をご希望の場合は以下からお願いします</h4>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか?" }, class: "btn btn-danger", method: :delete %></p>

<%= link_to "戻る", :back %>

  </div>
</div>
